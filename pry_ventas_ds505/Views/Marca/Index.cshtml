@model IEnumerable<pry_ventas_ds505.Models.Marca>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fas fa-tags"></i> Listado de Marcas</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Marca" asp-action="Create"><i class="fas fa-plus"></i> Agregar Marca</a>
        </div>
    </div>

    <br />

    <div class="row">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(marca => marca.Descripcion)</th>
                        <th>@Html.DisplayNameFor(marca => marca.Activo)</th>
                        <th>@Html.DisplayNameFor(marca => marca.FechaRegistro)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marca in Model)
                    {
                        <tr>
                            <td>@marca.Descripcion</td>
                            <td>@(marca.Activo ? "Sí" : "No")</td> <!-- Convertir true/false a Sí/No -->
                            <td>@marca.FechaRegistro.ToString("dd/MM/yyyy HH:mm:ss")</td> <!-- Formato personalizado para FechaRegistro -->
                            <td>
                                <a asp-controller="Marca" asp-action="Edit" asp-route-id="@marca.IdMarca" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                                <a asp-controller="Marca" asp-action="Delete" asp-route-id="@marca.IdMarca" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i> Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Existen Registros</p>
        }
        <div class="text-lg-center">
            <h2>Elaborado por Aldair Villegas</h2>
        </div>
    </div>
</div>
