@model IEnumerable<pry_ventas_ds505.Models.Categoria>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fas fa-list"></i> Listado de Categorías</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Categoria"
               asp-action="Create"><i class="fas fa-plus"></i> Agregar Categoría</a>
        </div>
    </div>

    <br />

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(cat => cat.codigo_categoria)</th>
                        <th>@Html.DisplayNameFor(cat => cat.categoria)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var categoria in Model)
                    {
                        <tr>
                            <td>@categoria.codigo_categoria</td>
                            <td>@categoria.categoria</td>
                            <td>
                                <a asp-controller="Categoria" asp-action="Edit"
                                   asp-route-id="@categoria.codigo_categoria"
                                   class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>

                                <a asp-controller="Categoria" asp-action="Delete"
                                   asp-route-id="@categoria.codigo_categoria"
                                   class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i> Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen categorías.</p>
        }
        <div class="text-lg-center">
            <h2>Elaborado por Aldair Villegas</h2>
        </div>
    </div>
</div>
