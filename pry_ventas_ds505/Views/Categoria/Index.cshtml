@model IEnumerable<pry_ventas_ds505.Models.Categoria>

@{
    ViewData["Title"] = "Listado de Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fas fa-tags"></i> Listado de Categorías</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Categoria" asp-action="Create"><i class="fas fa-plus"></i> Agregar Categoría</a>
        </div>
    </div>

    <br />

    <div class="row">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(categoria => categoria.Descripcion)</th>
                        <th>@Html.DisplayNameFor(categoria => categoria.Activo)</th>
                        <th>@Html.DisplayNameFor(categoria => categoria.FechaRegistro)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var categoria in Model)
                    {
                        <tr>
                            <td>@categoria.Descripcion</td>
                            <td>@(categoria.Activo ? "Sí" : "No")</td>
                            <td>@categoria.FechaRegistro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>
                                <a asp-controller="Categoria" asp-action="Edit" asp-route-id="@categoria.IdCategoria" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                                <a asp-controller="Categoria" asp-action="Delete" asp-route-id="@categoria.IdCategoria" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i> Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen categorías registradas.</p>
        }
        <div class="text-lg-center">
            <h2>Elaborado por el Grupo 5</h2>
        </div>
    </div>
</div>
