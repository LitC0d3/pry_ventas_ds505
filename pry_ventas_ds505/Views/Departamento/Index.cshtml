@model IEnumerable<pry_ventas_ds505.Models.Departamento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fas fa-building"></i> Listado de Departamentos</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Departamento" asp-action="Create"><i class="fas fa-plus"></i> Agregar Departamento</a>
        </div>
    </div>

    <br />

    <div class="row">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(departamento => departamento.IdDepartamento)</th>
                        <th>@Html.DisplayNameFor(departamento => departamento.Descripcion)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var departamento in Model)
                    {
                        <tr>
                            <td>@departamento.IdDepartamento</td>
                            <td>@departamento.Descripcion</td>
                            <td>
                                <a asp-controller="Departamento" asp-action="Edit" asp-route-id="@departamento.IdDepartamento" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                                <a asp-controller="Departamento" asp-action="Delete" asp-route-id="@departamento.IdDepartamento" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash-alt"></i> Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Existen Registros</p>
        }
    </div>
</div>